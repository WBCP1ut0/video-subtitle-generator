# Translation API Keys (optional - will fallback to Google Translate)
DEEPL_API_KEY=your_deepl_api_key

# OpenAI API Key (if using OpenAI Whisper API instead of local model)
OPENAI_API_KEY=your_openai_api_key

# Google Cloud Translation API (optional)
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key

# Storage (for production deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name

# Cloudinary (alternative storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Firebase (for authentication)
FIREBASE_ADMIN_KEY=your_firebase_admin_key

# Application Settings
MAX_FILE_SIZE=500000000  # 500MB
WHISPER_MODEL=base  # tiny, base, small, medium, large
DEBUG=true 